<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="20" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.htl.caloriecounter.controller.CalorieCounterController">

    <HBox alignment="CENTER">
        <Label text="Calorie-Counter" alignment="CENTER" style="-fx-font-size: 30px;"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <VBox alignment="CENTER" prefHeight="251.0" prefWidth="213.0" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 2px; -fx-border-radius: 5px;">
            <Button text="Track calories" textFill="RED" fx:id="trackCaloriesBtn" onAction="#trackCaloriesPressed"/>
        </VBox>
        <VBox alignment="CENTER" prefHeight="251.0" prefWidth="195.0" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 2px; -fx-border-radius: 5px;">
            <Button text="Statistics" textFill="#0d00ff" fx:id="statisticsBtn" onAction="#statisticsPressed" disable="true"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <VBox alignment="CENTER" prefHeight="251.0" prefWidth="213.0" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 2px; -fx-border-radius: 5px;">
            <Button text="Improve Goals" textFill="#0aab32" fx:id="improveGoalsBtn" onAction="#improveGoalsPressed" disable="true"/>
        </VBox>
        <VBox alignment="CENTER" prefHeight="251.0" prefWidth="195.0" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 2px; -fx-border-radius: 5px;">
            <Button text="Settings" textFill="#ff8103" fx:id="settingsBtn" onAction="#settingsPressed"/>
        </VBox>
    </HBox>

</VBox>
