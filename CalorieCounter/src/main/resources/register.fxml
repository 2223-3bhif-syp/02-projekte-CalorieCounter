<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.htl.caloriecounter.controller.RegisterController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER" spacing="20.0">

    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" spacing="15.0">
            <Label text="Username: " />
            <Label text="Email: " />
            <Label text="Password: " />
            <Label text="Weight: " />
            <Label text="Height: " />
        </VBox>
        <VBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="username"/>
            <TextField fx:id="email"/>
            <PasswordField fx:id="password" />
            <TextField fx:id="weight"/>
            <TextField fx:id="height"/>
        </VBox>
    </HBox>
    <Button fx:id="submitRegistration" text="Register" onAction="#onRegistration" />
</VBox>
